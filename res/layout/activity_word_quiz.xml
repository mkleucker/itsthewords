<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordQuiz" >

    <TextView
        android:id="@+id/quiz_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/quiz" />

    <EditText
        android:id="@+id/quiz_textEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quiz_textView"
        android:layout_alignRight="@+id/quiz_textView"
        android:layout_below="@+id/quiz_textView"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/translation"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"  >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/quiz_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/quiz_textView"
        android:layout_marginTop="12dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quiz_textEdit"
        android:layout_alignRight="@+id/quiz_textEdit"
        android:layout_below="@+id/quiz_textEdit"
        android:layout_marginTop="12dp"
        android:text="@string/check" />

</RelativeLayout>