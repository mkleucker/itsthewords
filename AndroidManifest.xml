    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/itsthewords"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="is.justcurious.itsthewords.WordControl"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="is.justcurious.itsthewords.WordQuiz"
            android:label="@string/title_activity_word_quiz" >
        </activity>
        <activity
            android:name="is.justcurious.itsthewords.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="is.justcurious.itsthewords.WordDetailActivity"
            android:label="@string/title_activity_word_detail" >
        </activity>
    </application>

</manifest>